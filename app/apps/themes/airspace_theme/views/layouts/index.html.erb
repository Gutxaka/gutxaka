    <!DOCTYPE html>
    <html lang="en">
    <head>
        <!-- META SECTION -->
        <title><%= current_site.the_title %></title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <!-- END META SECTION -->
        <%= yield :head %>
        <%= stylesheet_link_tag theme_asset_path("css/main") %>
        <%= javascript_include_tag theme_asset_path("js/main.js") %>
        <%= raw the_head %>
    </head>
    <body>
    <!-- header -->
    <header id="navigation" class="animated-header">
    <!-- container -->
        <div class="container">        
            <div class="navbar-header">                
                <!-- responsive nav button -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- /responsive nav button -->

                <!-- logo -->
                <h1 class="navbar-brand">
                    <a id="logo" class="navbar-brand" href="<%= current_site.the_url %>"><%= image_tag theme_asset_url('/images/logo.png') %></a>
                </h1>
                <!-- /logo -->
            </div>

             <!-- main nav -->
            <nav class="collapse navbar-collapse navbar-right" role="navigation">
                <%= raw get_nav_menu('main_menu', 'nav navbar-nav menu') %>

                <ul class="nav navbar-nav navbar-right">
                    <% if signin?  %>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><img src="<%= cama_current_user.decorate.the_avatar %>" style="max-width: 24px; border-radius: 50%" alt=""/> <%= cama_current_user.username %></a>
                            <ul class="dropdown-menu">
                                <li><a href="<%= cama_admin_dashboard_path %>">Dashboard</a></li>
                                <li><a href="<%= cama_admin_profile_path %>">Profile</a></li>
                                <li><a href="<%= cama_admin_logout_path %>">Logout</a></li>
                            </ul>
                        </li>
                    <% else %>

                        <li class="dropdown">
                            <a id="login-user" class="dropdown-toggle" data-toggle="dropdown" href="#">Login / Register</a>
                            <ul class="dropdown-menu">
                                <li><a href="<%= cama_admin_login_path %>">Login</a></li>
                                <li><a href="<%= cama_admin_register_path %>">Register</a></li>
                            </ul>
                        </li>
                    <% end %>
                </ul>
                <%= raw current_site.draw_languages("language list-inline pull-right", true) %>
            </nav>
            <!-- /main nav -->
            </div>
        </header>
        <!-- ./header -->

        <div class="content">
            <%= yield %>
        </div>

        <!-- footer -->
        <footer>

        </footer>
        <!-- ./footer -->
    </div>
    <!-- ./container -->
            <!-- load Js -->
    <%= javascript_include_tag theme_asset_path("js/jquery-1.11.3.min.js") %>
    <%= javascript_include_tag theme_asset_path("js/bootstrap.min.js") %>
    <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDY0kkJiTPVd2U7aTOAwhc9ySH6oHxOIYM&amp;sensor=false"></script>
    <%= javascript_include_tag theme_asset_path("js/waypoints.min.js") %>
    <%= javascript_include_tag theme_asset_path("js/lightbox.js") %>
    <%= javascript_include_tag theme_asset_path("js/jquery.counterup.min.js") %>
    <%= javascript_include_tag theme_asset_path("js/owl.carousel.min.js") %>
    <%= javascript_include_tag theme_asset_path("js/html5lightbox.js") %>
    <%= javascript_include_tag theme_asset_path("js/jquery.mixitup.js") %>
    <%= javascript_include_tag theme_asset_path("js/wow.min.js") %>
    <%= javascript_include_tag theme_asset_path("js/jquery.scrollUp.js") %>
    <%= javascript_include_tag theme_asset_path("js/jquery.sticky.js") %>
    <%= javascript_include_tag theme_asset_path("js/jquery.nav.js") %>
    <%= javascript_include_tag theme_asset_path("js/secondary.js") %>
    <%= yield :scripts %>

    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-57a334844b849c5c"></script>

    </body>
    </html>
